---
interface NavItem {
  name: string;
  href: string;
}

// Misma ruta del "base" en astro.config.mjs
const siteBase = import.meta.env.BASE_URL;

const navItems: NavItem[] = [
  { name: 'Home', href: `${siteBase}` },
  { name: 'New', href: `${siteBase}new/` },
  { name: 'Popular', href: `${siteBase}popular/` },
  { name: 'Trending', href: `${siteBase}trending/` },
  { name: 'Categories', href: `${siteBase}categories/` },
];

interface Props {
  isHorizontal?: boolean;
}

const { isHorizontal = false } = Astro.props as Props;

const currentPathname = Astro.url.pathname;
---

<ul
  class={`flex flex-col gap-5  ${isHorizontal ? 'flex-row mt-0 hidden lg:flex lg:gap-8' : 'flex-col w-full mt-[86px]'}`}
>
  {
    navItems.map((item: NavItem) => (
      <li>
        <a
          class={`text-lg lg:text-base ${currentPathname === item.href ? 'text-Soft-orange lg:text-Soft-orange' : 'text-Very-dark-blue lg:text-Dark-grayish-blue'} hover:text-Soft-orange transition-all duration-300 ease-in-out `}
          href={item.href}
        >
          {item.name}
        </a>
      </li>
    ))
  }
</ul>
